@model GrupSabahAlisveris.Models.Admin
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>
<form method="post" action="Delete">
    <div class="form-group row">
        <input type="hidden" asp-for="AdminId"/>
        <label for="text" class="col-4 col-form-label">Admin Adı</label>
        <div class="col-8">
            <input id="text" readonly asp-for="AdminName" placeholder="Admin Adını Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text1" class="col-4 col-form-label">Admin Şifresi</label>
        <div class="col-8">
            <input id="text1" readonly  asp-for="AdminPassword" placeholder="Admin Şifresini Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="text2" class="col-4 col-form-label">Admin Email</label>
        <div class="col-8">
            <input id="text2" readonly asp-for="AdminEmail" placeholder="Admin Email Adresini Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Silme</button>
            <a asp-action="Index" asp-controller="Admins" class="btn btn-secondary">İptal</a>
        </div>
    </div>
</form>
