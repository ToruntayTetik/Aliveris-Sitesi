@model IEnumerable<GrupSabahAlisveris.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Feature)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Description)
            </td>
            <td>
               
                <img src="/Product_Images/@item.Product_Image" height="50" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Feature)
            </td>
            <td>
                    <a asp-action="Edit" title="Düzelt" asp-route-id="@item.Product_Id"><i class="fa-solid fa-pen-nib"></i></a> |
                    <a asp-action="Details" title="Detay" asp-route-id="@item.Product_Id"><i class="fa-solid fa-file"></i></a> |
                    <a asp-action="Delete" title="Silme" asp-route-id="@item.Product_Id"><i class="fa-solid fa-xmark"></i></a>
                    <a asp-controller="ProductColors" title="Renkler" asp-action="Index" asp-route-id="@item.Product_Id"><i class="fa-brands fa-slack"></i></a> |
                    <a asp-controller="ProductSizes" title="Beden" asp-action="Index" asp-route-id="@item.Product_Id"><i class="fa-solid fa-hippo"></i></a>
                    <a asp-controller="Galleries" title="Resim" asp-action="Index" asp-route-id="@item.Product_Id"><i class="fa-brands fa-docker"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
